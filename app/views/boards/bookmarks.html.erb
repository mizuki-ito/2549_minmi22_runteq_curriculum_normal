<% content_for(:title, t('.title'))%>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form', search: @search, url: bookmarks_boards_path %>
    </div>
  </div>
  <!-- お気に入り一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @bookmark_boards.present? %>
          <%= render patial: "board", collection: @bookmark_boards%>
        <% else %>
          <p><%= t('no_bookmark_boards') %></p>
        <% end %>
      </div>
      <%= paginate @bookmark_boards %>
    </div>
  </div>
</div>
